<%- include('../header') %>
<div class="container nav">
    <div class="row">
        <div class="col-md-12 text-center">
            <a href="/posts"><h1>myblog</h1></a>
            <p>my first blog</p>
        </div>
    </div>
</div>
<div class="container">
    <ul>
        <li><a href="/admin/post">新建</a></li>
    </ul>
</div>
<section class="content-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-2">标题</div>
            <div class="col-md-2">
                发布状态
            </div>
            <div class="col-md-1">
                访问数
            </div>
            <div class="col-md-1">
                评论数
            </div>
            <div class="col-md-2">
                发布时间
            </div>
            <div class="col-md-2">
                更新时间
            </div>
            <div class="col-md-2">
                操作
            </div>
        </div>
        <% articles.forEach(function (article) { %>
        <div class="row">
            <div class="col-md-2"><a href="/article/<%= article._id %>"><%= article.title %></a></div>
            <div class="col-md-2">
                <%= article.status %>
            </div>
            <div class="col-md-1">
                <%= article.visit_count %>
            </div>
            <div class="col-md-1">
                <%= article.comment_count %>
            </div>
            <div class="col-md-2">
                <%= article.publish_time %>
            </div>
            <div class="col-md-2">
                <%= article.updated %>
            </div>
            <div class="col-md-2">
                <a href="/admin/post/<%= article._id %>">编辑</a>
                <a href="/admin/post/remove/<%= article._id %>">删除</a>
            </div>
        </div>
        <% }) %>
    </div>
</section>
<%- include('../footer') %>